{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "KYKY": "Debug"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
    },
    "File": {
      "Path": "/var/log/kyky-library/app-{Date}.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30,
      "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {Message:lj} {NewLine}{Exception}"
    }
  },
  
  "ConnectionStrings": {
    "DefaultConnection": "Server=kyky-library-db.kyky.com;Database=KYKY_Library;User Id=kyky_user;Password=${KYKY_DB_PASSWORD};TrustServerCertificate=true;",
    "CacheConnection": "kyky-redis.kyky.com:6379"
  },
  
  "KYKY": {
    "ApplicationName": "KYKY Library Management System",
    "ApplicationNameHebrew": "מערכת ניהול הספרייה של KYKY",
    "Company": "KYKY Corporation",
    "Version": "1.0.0",
    "Environment": "Development",
    "Features": {
      "EnableDigitalLibrary": true,
      "EnableReservations": true,
      "EnableRecommendations": true,
      "EnableMultiLanguage": true
    },
    "Library": {
      "Name": "KYKY Central Library",
      "NameHebrew": "הספרייה המרכזית של KYKY", 
      "Code": "KYKY-LIB-001",
      "DefaultLanguage": "he",
      "SupportedLanguages": ["he", "en", "ar"]
    },
    "Services": {
      "BookService": {
        "MaxBooksPerRequest": 100,
        "DefaultSearchResults": 50,
        "CacheExpirationMinutes": 30
      },
      "MemberService": {
        "DefaultMembershipType": "KYKY Standard",
        "PasswordExpirationDays": 90,
        "MaxLoginAttempts": 5
      },
      "LoanService": {
        "DefaultLoanPeriodDays": 14,
        "MaxRenewals": 3,
        "ReminderDaysBefore": 3,
        "FinePerDayILS": 2.0
      }
    }
  },
  
  "Authentication": {
    "JWT": {
      "SecretKey": "${KYKY_JWT_SECRET}",
      "Issuer": "KYKY-Library-System",
      "Audience": "KYKY-Library-Users",
      "ExpirationHours": 8,
      "RefreshTokenExpirationDays": 30
    },
    "ActiveDirectory": {
      "Domain": "kyky.com",
      "LdapPath": "LDAP://dc.kyky.com",
      "SearchBase": "DC=kyky,DC=com"
    }
  },
  
  "Cache": {
    "Type": "Memory",
    "DefaultExpirationMinutes": 30,
    "MaxSize": 10000,
    "Redis": {
      "ConnectionString": "kyky-redis.kyky.com:6379",
      "Database": 0,
      "KeyPrefix": "kyky-library:"
    }
  },
  
  "Notifications": {
    "Email": {
      "SmtpServer": "smtp.kyky.com",
      "SmtpPort": 587,
      "FromAddress": "library@kyky.com",
      "FromName": "KYKY Library System",
      "EnableSsl": true,
      "Username": "library@kyky.com",
      "Password": "${KYKY_EMAIL_PASSWORD}"
    },
    "SMS": {
      "Provider": "KYKY SMS Gateway",
      "ApiUrl": "https://sms-api.kyky.com",
      "ApiKey": "${KYKY_SMS_API_KEY}",
      "FromNumber": "+972-50-1234567"
    }
  },
  
  "Monitoring": {
    "HealthChecks": {
      "Enabled": true,
      "Endpoint": "/health/kyky-library",
      "DetailedOutput": true
    },
    "Metrics": {
      "Enabled": true,
      "Endpoint": "/metrics/kyky-library",
      "IncludeSystemMetrics": true,
      "IncludeApplicationMetrics": true
    },
    "ApplicationInsights": {
      "InstrumentationKey": "${KYKY_APPINSIGHTS_KEY}",
      "EnableAdaptiveSampling": true,
      "SamplingPercentage": 10
    }
  }
}
