<?xml version="1.0" encoding="UTF-8"?>
<!--
    KYKY Library Management System Configuration
    הגדרות מערכת ניהול הספרייה של KYKY
    
    This XML configuration file contains all settings for KYKY library system
    קובץ הגדרות XML זה מכיל את כל ההגדרות למערכת ספרייה KYKY
-->
<kykyLibrarySettings>
    <!-- הגדרות כלליות של מערכת KYKY - General KYKY system settings -->
    <general>
        <application>
            <name>KYKY Library Management System</name>
            <nameHebrew>מערכת ניהול הספרייה של KYKY</nameHebrew>
            <version>1.0.0</version>
            <company>KYKY Corporation</company>
            <companyHebrew>תאגיד KYKY</companyHebrew>
            <description>Advanced library management system by KYKY</description>
            <descriptionHebrew>מערכת ניהול ספרייה מתקדמת של KYKY</descriptionHebrew>
            <buildDate>2024-07-09</buildDate>
            <environment>Development</environment>
        </application>
        
        <!-- הגדרות לוקליזציה - Localization settings -->
        <localization>
            <defaultLanguage>he</defaultLanguage>
            <supportedLanguages>
                <language code="he" name="עברית" direction="rtl"/>
                <language code="en" name="English" direction="ltr"/>
                <language code="ar" name="العربية" direction="rtl"/>
            </supportedLanguages>
            <!--
                הגדרות אזור זמן למערכת KYKY
                Time zone settings for KYKY system
            -->
            <timezone>Asia/Jerusalem</timezone>
            <dateFormat>dd/MM/yyyy</dateFormat>
            <timeFormat>HH:mm:ss</timeFormat>
            <currency>ILS</currency>
            <currencySymbol>₪</currencySymbol>
        </localization>
    </general>
    
    <!-- הגדרות ספרייה פיזית - Physical library settings -->
    <library>
        <facility>
            <!-- פרטי מתקן ספרייה KYKY - KYKY library facility details -->
            <name>KYKY Central Library</name>
            <nameHebrew>הספרייה המרכזית של KYKY</nameHebrew>
            <code>KYKY-LIB-001</code>
            <established>2020</established>
            
            <address>
                <!-- כתובת ספרייה KYKY - KYKY library address -->
                <street>123 KYKY Technology Boulevard</street>
                <streetHebrew>שדרות הטכנולוגיה של KYKY 123</streetHebrew>
                <city>Tel Aviv</city>
                <cityHebrew>תל אביב</cityHebrew>
                <postalCode>6789012</postalCode>
                <country>Israel</country>
                <countryHebrew>ישראל</countryHebrew>
            </address>
            
            <contact>
                <!--
                    פרטי קשר עם ספרייה KYKY
                    KYKY library contact details
                -->
                <phone>+972-3-1234567</phone>
                <fax>+972-3-1234568</fax>
                <email>library@kyky.com</email>
                <website>https://library.kyky.com</website>
                <socialMedia>
                    <facebook>https://facebook.com/kyky.library</facebook>
                    <instagram>https://instagram.com/kyky_library</instagram>
                </socialMedia>
            </contact>
        </facility>
        
        <operatingHours>
            <!-- שעות פעילות ספרייה KYKY - KYKY library operating hours -->
            <weekday name="sunday" dayHebrew="ראשון">
                <open>08:00</open>
                <close>20:00</close>
                <description>יום ראשון - שעות רגילות</description>
            </weekday>
            <weekday name="monday" dayHebrew="שני">
                <open>08:00</open>
                <close>20:00</close>
                <description>יום שני - שעות רגילות</description>
            </weekday>
            <weekday name="tuesday" dayHebrew="שלישי">
                <open>08:00</open>
                <close>20:00</close>
                <description>יום שלישי - שעות רגילות</description>
            </weekday>
            <weekday name="wednesday" dayHebrew="רביעי">
                <open>08:00</open>
                <close>20:00</close>
                <description>יום רביעי - שעות רגילות</description>
            </weekday>
            <weekday name="thursday" dayHebrew="חמישי">
                <open>08:00</open>
                <close>20:00</close>
                <description>יום חמישי - שעות רגילות</description>
            </weekday>
            <weekday name="friday" dayHebrew="שישי">
                <!--
                    יום שישי - שעות מקוצרות
                    Friday - shortened hours
                -->
                <open>08:00</open>
                <close>14:00</close>
                <description>יום שישי - שעות מקוצרות</description>
            </weekday>
            <weekday name="saturday" dayHebrew="שבת">
                <open>Closed</open>
                <close>Closed</close>
                <description>יום שבת - סגור</description>
            </weekday>
        </operatingHours>
        
        <capacity>
            <!-- קיבולת ספרייה KYKY - KYKY library capacity -->
            <totalBooks>50000</totalBooks>
            <digitalBooks>15000</digitalBooks>
            <readingSeats>200</readingSeats>
            <studyRooms>12</studyRooms>
            <computerStations>25</computerStations>
            <description>קיבולת מתקני ספרייה KYKY</description>
        </capacity>
    </library>
    
    <!--
        הגדרות מסד נתונים של KYKY
        KYKY database configuration
    -->
    <database>
        <connection>
            <server>kyky-library-db-cluster.kyky.com</server>
            <port>1433</port>
            <database>KYKY_Library_Management</database>
            <schema>dbo</schema>
            <username>kyky_library_admin</username>
            <password>${KYKY_LIBRARY_DB_PASSWORD}</password>
            <connectionTimeout>30</connectionTimeout>
            <commandTimeout>60</commandTimeout>
            <!--
                מחרוזת חיבור מלאה למסד נתונים KYKY
                Full connection string for KYKY database
            -->
            <connectionString>Server=kyky-library-db-cluster.kyky.com,1433;Database=KYKY_Library_Management;User Id=kyky_library_admin;Password=${KYKY_LIBRARY_DB_PASSWORD};TrustServerCertificate=true;</connectionString>
        </connection>
        
        <pooling>
            <!-- הגדרות מאגר חיבורים - Connection pooling settings -->
            <enabled>true</enabled>
            <minPoolSize>10</minPoolSize>
            <maxPoolSize>100</maxPoolSize>
            <connectionLifetime>300</connectionLifetime>
            <description>מאגר חיבורים למסד נתונים KYKY</description>
        </pooling>
        
        <backup>
            <!--
                הגדרות גיבוי מסד נתונים KYKY
                KYKY database backup settings
            -->
            <enabled>true</enabled>
            <schedule>daily</schedule>
            <time>02:00</time>
            <retentionDays>30</retentionDays>
            <location>/backups/kyky-library/</location>
            <compression>true</compression>
        </backup>
    </database>
    
    <!-- שירותי מערכת KYKY - KYKY system services -->
    <services>
        <bookManagement>
            <!-- שירות ניהול ספרים של KYKY - KYKY book management service -->
            <enabled>true</enabled>
            <catalogingSystem>MARC21</catalogingSystem>
            <classificationSystem>DDC</classificationSystem>
            <autoISBNLookup>true</autoISBNLookup>
            <duplicateDetection>true</duplicateDetection>
            <barcodePrefix>KYKY</barcodePrefix>
            <description>שירות ניהול ספרים מתקדם של KYKY</description>
            
            <categories>
                <!-- קטגוריות ספרים בספרייה KYKY - Book categories in KYKY library -->
                <category code="100" name="Philosophy" nameHebrew="פילוסופיה"/>
                <category code="200" name="Religion" nameHebrew="דת"/>
                <category code="300" name="Social Sciences" nameHebrew="מדעי החברה"/>
                <category code="400" name="Language" nameHebrew="שפה"/>
                <category code="500" name="Science" nameHebrew="מדע"/>
                <category code="600" name="Technology" nameHebrew="טכנולוגיה"/>
                <category code="700" name="Arts" nameHebrew="אמנות"/>
                <category code="800" name="Literature" nameHebrew="ספרות"/>
                <category code="900" name="History" nameHebrew="היסטוריה"/>
                <category code="KYKY" name="KYKY Publications" nameHebrew="פרסומי KYKY"/>
            </categories>
        </bookManagement>
        
        <memberManagement>
            <!--
                שירות ניהול חברים של KYKY
                KYKY member management service
            -->
            <enabled>true</enabled>
            <membershipValidationDays>365</membershipValidationDays>
            <autoRenewal>true</autoRenewal>
            <memberCardPrefix>KYKY-MEM</memberCardPrefix>
            <photoRequired>false</photoRequired>
            
            <membershipTypes>
                <!-- סוגי חברות בספרייה KYKY - Membership types in KYKY library -->
                <type name="KYKYEmployee" nameHebrew="עובד KYKY">
                    <maxBooks>15</maxBooks>
                    <loanPeriodDays>21</loanPeriodDays>
                    <renewalLimit>5</renewalLimit>
                    <finePerDay>1.0</finePerDay>
                    <priority>1</priority>
                </type>
                <type name="KYKYStudent" nameHebrew="סטודנט KYKY">
                    <maxBooks>10</maxBooks>
                    <loanPeriodDays>14</loanPeriodDays>
                    <renewalLimit>3</renewalLimit>
                    <finePerDay>0.5</finePerDay>
                    <priority>2</priority>
                </type>
                <type name="KYKYGuest" nameHebrew="אורח KYKY">
                    <maxBooks>3</maxBooks>
                    <loanPeriodDays>7</loanPeriodDays>
                    <renewalLimit>1</renewalLimit>
                    <finePerDay>2.0</finePerDay>
                    <priority>3</priority>
                </type>
            </membershipTypes>
        </memberManagement>
        
        <loanManagement>
            <!-- שירות ניהול השאלות של KYKY - KYKY loan management service -->
            <enabled>true</enabled>
            <autoReminders>true</autoReminders>
            <reminderDaysBefore>3</reminderDaysBefore>
            <overdueGracePeriodDays>1</overdueGracePeriodDays>
            <maxOverdueBooks>5</maxOverdueBooks>
            
            <fines>
                <!--
                    הגדרות קנסות של מערכת KYKY
                    KYKY system fines configuration
                -->
                <currency>ILS</currency>
                <dailyFineAmount>2.0</dailyFineAmount>
                <maxFinePerBook>50.0</maxFinePerBook>
                <lostBookFineMultiplier>3.0</lostBookFineMultiplier>
                <gracePeriodDays>1</gracePeriodDays>
            </fines>
        </loanManagement>
    </services>
    
    <!--
        הגדרות אבטחה ואימות למערכת KYKY
        Security and authentication settings for KYKY system
    -->
    <security>
        <authentication>
            <method>ActiveDirectory</method>
            <domain>kyky.com</domain>
            <ldapServer>ldap://dc.kyky.com</ldapServer>
            <sessionTimeoutMinutes>480</sessionTimeoutMinutes>
            <passwordPolicy>
                <!-- מדיניות סיסמאות למערכת KYKY - Password policy for KYKY system -->
                <minLength>8</minLength>
                <requireUppercase>true</requireUppercase>
                <requireLowercase>true</requireLowercase>
                <requireNumbers>true</requireNumbers>
                <requireSpecialChars>true</requireSpecialChars>
                <expirationDays>90</expirationDays>
            </passwordPolicy>
        </authentication>
        
        <authorization>
            <!--
                הגדרות הרשאות במערכת KYKY
                Authorization settings in KYKY system
            -->
            <roles>
                <role name="KYKYLibrarian" description="ספרן ראשי של KYKY">
                    <permissions>
                        <permission>ManageBooks</permission>
                        <permission>ManageMembers</permission>
                        <permission>ProcessLoans</permission>
                        <permission>GenerateReports</permission>
                        <permission>ViewStatistics</permission>
                    </permissions>
                </role>
                
                <role name="KYKYAssistant" description="עוזר ספרן של KYKY">
                    <permissions>
                        <permission>ProcessLoans</permission>
                        <permission>SearchBooks</permission>
                        <permission>ViewMemberInfo</permission>
                    </permissions>
                </role>
                
                <role name="KYKYAdmin" description="מנהל מערכת KYKY">
                    <permissions>
                        <permission>SystemConfiguration</permission>
                        <permission>UserManagement</permission>
                        <permission>DatabaseBackup</permission>
                        <permission>SystemLogs</permission>
                    </permissions>
                </role>
            </roles>
        </authorization>
        
        <audit>
            <!--
                מערכת ביקורת למערכת KYKY
                Audit system for KYKY
            -->
            <enabled>true</enabled>
            <logLevel>Information</logLevel>
            <retentionDays>365</retentionDays>
            <auditActions>
                <action>BookAdd</action>
                <action>BookRemove</action>
                <action>MemberAdd</action>
                <action>MemberUpdate</action>
                <action>LoanCreate</action>
                <action>LoanReturn</action>
                <action>SystemLogin</action>
                <action>SystemLogout</action>
            </auditActions>
        </audit>
    </security>
    
    <!-- הגדרות ניטור ודיווח - Monitoring and reporting settings -->
    <monitoring>
        <performance>
            <!-- מדדי ביצועים למערכת KYKY - Performance metrics for KYKY system -->
            <enabled>true</enabled>
            <sampleIntervalSeconds>60</sampleIntervalSeconds>
            <thresholds>
                <cpuUsagePercent>80</cpuUsagePercent>
                <memoryUsagePercent>85</memoryUsagePercent>
                <diskUsagePercent>90</diskUsagePercent>
                <responseTimeMilliseconds>2000</responseTimeMilliseconds>
            </thresholds>
        </performance>
        
        <reporting>
            <!--
                מערכת דיווח של KYKY
                KYKY reporting system
            -->
            <enabled>true</enabled>
            <scheduledReports>
                <report name="DailyStatistics" schedule="daily" time="23:00" format="PDF"/>
                <report name="WeeklyInventory" schedule="weekly" day="sunday" time="06:00" format="Excel"/>
                <report name="MonthlyUsage" schedule="monthly" day="1" time="08:00" format="PDF"/>
            </scheduledReports>
            <reportRecipients>
                <recipient email="library-manager@kyky.com" reports="all"/>
                <recipient email="it-admin@kyky.com" reports="system"/>
            </reportRecipients>
        </reporting>
    </monitoring>
</kykyLibrarySettings>
