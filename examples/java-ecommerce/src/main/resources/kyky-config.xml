<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    KYKY E-commerce Configuration
    הגדרות מערכת המסחר האלקטרוני של KYKY
-->
<configuration>
    <!-- הגדרות כלליות - General settings -->
    <general>
        <application name="KYKY E-commerce Platform">
            <!-- שם היישום של KYKY - KYKY application name -->
            <displayName>פלטפורמת המסחר האלקטרוני של KYKY</displayName>
            <version>1.0.0</version>
            <company>KYKY Corporation</company>
            <description>מערכת מסחר אלקטרוני מתקדמת של חברת KYKY</description>
        </application>
    </general>
    
    <!-- הגדרות מסד נתונים - Database settings -->
    <database>
        <!-- 
            הגדרות חיבור למסד נתונים של KYKY
            KYKY database connection settings
        -->
        <connection>
            <host>kyky-database.kyky.com</host>
            <port>5432</port>
            <database>kyky_ecommerce_db</database>
            <username>kyky_db_user</username>
            <!-- סיסמת מסד נתונים - Database password -->
            <password>${KYKY_DATABASE_PASSWORD}</password>
        </connection>
        
        <pooling>
            <!-- הגדרות מאגר חיבורים של KYKY - KYKY connection pool settings -->
            <minConnections>5</minConnections>
            <maxConnections>50</maxConnections>
            <connectionTimeout>30000</connectionTimeout>
        </pooling>
    </database>
    
    <!-- הגדרות שירותי KYKY - KYKY services settings -->
    <services>
        <productService>
            <!-- שירות מוצרים של KYKY - KYKY product service -->
            <enabled>true</enabled>
            <cacheSize>10000</cacheSize>
            <cacheExpirationMinutes>60</cacheExpirationMinutes>
            <description>שירות ניהול מוצרים של KYKY</description>
        </productService>
        
        <orderService>
            <!-- שירות הזמנות של KYKY - KYKY order service -->
            <enabled>true</enabled>
            <maxOrdersPerHour>1000</maxOrdersPerHour>
            <orderRetentionDays>365</orderRetentionDays>
            <description>שירות ניהול הזמנות של KYKY</description>
        </orderService>
    </services>
    
    <!-- 
        הגדרות אבטחה של מערכת KYKY
        KYKY system security settings
    -->
    <security>
        <authentication>
            <!-- הגדרות אימות למערכת KYKY - KYKY authentication settings -->
            <method>JWT</method>
            <tokenExpirationHours>24</tokenExpirationHours>
            <secretKey>${KYKY_JWT_SECRET}</secretKey>
        </authentication>
        
        <encryption>
            <!-- הגדרות הצפנה של KYKY - KYKY encryption settings -->
            <algorithm>AES-256-GCM</algorithm>
            <keyRotationDays>90</keyRotationDays>
        </encryption>
    </security>
    
    <!--
        רישום ומעקב אירועים במערכת KYKY
        KYKY system logging and monitoring
    -->
    <logging>
        <level>INFO</level>
        <file>/var/log/kyky/ecommerce.log</file>
        <maxSize>100MB</maxSize>
        <retentionDays>30</retentionDays>
        <!-- תיאור מערכת הרישום - Logging system description -->
        <description>מערכת רישום אירועים של KYKY</description>
    </logging>
</configuration>
