{
  "applicationName": "KYKY E-commerce Platform",
  "applicationDescription": "מערכת מסחר אלקטרוני של חברת KYKY",
  "version": "1.0.0",
  "company": "KYKY Corporation",
  "companyDescription": "חברת KYKY לפתרונות טכנולוגיים",
  
  "database": {
    "host": "kyky-db-server.kyky.com",
    "port": 5432,
    "name": "kyky_ecommerce",
    "username": "kyky_user",
    "password": "${KYKY_DB_PASSWORD}",
    "connectionPoolSize": 20,
    "description": "הגדרות מסד נתונים של KYKY"
  },
  
  "api": {
    "baseUrl": "https://api.kyky.com/ecommerce",
    "version": "v1",
    "timeout": 30000,
    "rateLimiting": {
      "enabled": true,
      "maxRequestsPerMinute": 1000,
      "description": "הגבלת קצב בקשות למערכת KYKY"
    }
  },
  
  "features": {
    "productCatalog": {
      "enabled": true,
      "maxProductsPerCategory": 10000,
      "description": "קטלוג מוצרים של KYKY"
    },
    "orderProcessing": {
      "enabled": true,
      "maxOrdersPerDay": 50000,
      "description": "עיבוד הזמנות KYKY"
    },
    "paymentGateway": {
      "enabled": true,
      "supportedCurrencies": ["USD", "EUR", "ILS"],
      "description": "שער תשלומים של KYKY"
    }
  },
  
  "logging": {
    "level": "INFO",
    "outputPath": "/var/log/kyky-ecommerce/",
    "maxFileSize": "100MB",
    "description": "הגדרות רישום אירועים של KYKY"
  },
  
  "security": {
    "jwtSecret": "${KYKY_JWT_SECRET}",
    "tokenExpirationMinutes": 60,
    "encryptionAlgorithm": "AES-256",
    "description": "הגדרות אבטחה של מערכת KYKY"
  },
  
  "monitoring": {
    "healthCheckEndpoint": "/health/kyky",
    "metricsEndpoint": "/metrics/kyky",
    "alertingEnabled": true,
    "description": "ניטור מערכת KYKY"
  }
}
